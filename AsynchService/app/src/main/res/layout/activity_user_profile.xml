<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="hr.algebra.bibo.UserProfileActivity"
    android:id="@+id/c">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/mozart"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wolfgang"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mozart"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton4" />

    <TextView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Turn ON for help"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView9" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/buttonaccessibility"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:background="@drawable/qrcode"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
